            <div class="col-12 col-sm-6 col-lg-4 service-item">
                <img src="~/images/Software Development.jpg" alt="Software Development" class="service-image">
                <h3 class="service-title">Software Development</h3>
            </div>

            <div class="col-12 col-sm-6 col-lg-4 service-item">
                <img src="~/images/ERP-01.jpg" alt="Enterprise Resource Planning" class="service-image">
                <h3 class="service-title">Enterprise Resource Planning</h3>
                <a asp-action="ERP" class="btn btn-primary mt-3">Discover</a>
            </div>
            <div class="col-12 col-sm-6 col-lg-4 service-item">
                <img src="~/images/Web Development-01.jpg" alt="Web Development" class="service-image">
                <h3 class="service-title">Web Development</h3>
                <a href="Web" class="btn btn-primary mt-3">Learn More</a>
            </div>
            <div class="col-12 col-sm-6 col-lg-4 service-item">
                <img src="~/images/Intractive & Creative Design-01-01.jpg" alt="Interactive and Creative Designs" class="service-image">
                <h3 class="service-title">Interactive and Creative Designs</h3>
                <a asp-action="Creative" class="btn btn-primary mt-3">View Details</a>
            </div>
            <div class="col-12 col-sm-6 col-lg-4 service-item">
                <img src="~/images/2352644-01.jpg" alt="Social Media Management" class="service-image">
                <h3 class="service-title">Social Media Management</h3>
                <a asp-action="Social" class="btn btn-primary mt-3">Get Started</a>
            </div>
            <div class="col-12 col-sm-6 col-lg-4 service-item">
                <img src="~/images/Mobile App Development.jpg" alt="Mobile App Development" class="service-image">
                <h3 class="service-title">Mobile App Development</h3>
                <a asp-action="Mobile" class="btn btn-primary mt-3">See More</a>
            </div>
        </div>
    </div>
</div>
