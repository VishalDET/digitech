                gap: 20px;
            }

            .card-demo .card-body {
                padding: 2em;
            }

            .phone-mockup, .content {
                width: 100%;
            }

            .content {
                padding: 20px;
            }

            .card-intro {
                max-width: 100%;
            }
        }

        @@media(max-width:540px) {
            h1 {
                font-size: 1.5em !important;
            }

            .font-bigger {
                font-size: 1.2rem;
            }

            .font-bigger b {
                font-size: 1.5rem;
            }

            .card-demo .card-body {
                padding: 1em;
            }
        }
    </style>
}
